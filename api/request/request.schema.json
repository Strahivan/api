{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["customer_id", "source_id", "destination_id"],

  "properties": {
    "source_id": {
      "anyOf": [
        { "type": "integer" },
        { "type": "null" }
      ],
      "minimum": 1,
      "faker": { "random.number": [{"max": 5, "min": 1}]}
    },
    "destination_id": {
      "anyOf": [
        { "type": "integer" },
        { "type": "null" }
      ],
      "minimum": 1,
      "faker": { "random.number": [{"max": 5, "min": 1}]}
    },
    "customer_id": {
      "anyOf": [
        { "type": "integer" },
        { "type": "null" }
      ],
      "minimum": 1,
      "faker": { "random.number": [{"max": 5, "min": 1}]}
    },
    "trip_id": {
      "anyOf": [
        { "type": "integer" },
        { "type": "null" }
      ],
      "minimum": 1,
      "faker": { "random.number": [{"max": 5, "min": 1}]}
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "faker": "lorem.sentence"
    },
    "instructions": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ],
      "maxLength": 1000,
      "faker": "lorem.paragraph"
    },
    "shipping_address": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ],
      "maxLength": 1000,
      "faker": "lorem.paragraph"
    },
    "price": {
      "anyOf": [
        { "type": "float" },
        { "type": "null" }
      ],
      "faker": { "random.number": [{"max": 100, "min": 10}]
      }
    },
    "service_charge": {
      "anyOf": [
        { "type": "float" },
        { "type": "null" }
      ],
      "faker": { "random.number": [{"max": 100, "min": 10}]
      }
    },
    "carrier_charge": {
      "anyOf": [
        { "type": "float" },
        { "type": "null" }
      ],
      "faker": { "random.number": [{"max": 100, "min": 10}]
      }
    },
    "weight": {
      "anyOf": [
        { "type": "float" },
        { "type": "null" }
      ],
      "faker": { "random.number": [{"max": 10, "min": 1}]
      }
    },
    "gallery": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "faker": "image.imageUrl"
          }
        },
        { "type": "null" }
      ]
    },
    "status": {
      "enum": ["pending", "confirmed", "processing", "delivering", "completed", "completed", "failed", "canceled"]
    },
    "created_at": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ],
      "format": "date-time",
      "chance": { "date": [{"string": true}]}
    },
    "updated_at": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ],
      "format": "date-time",
      "chance": { "date": [{"string": true}]}
    }
  }
}
