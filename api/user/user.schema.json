{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [],

  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "faker": "name.findName"
    },
    "country_id": {
      "type": "integer",
      "faker": { "random.number": [{"max": 5, "min": 1}]}
    },
    "role": {
      "enum": ["admin"]
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "format": "email",
      "faker": "internet.email"
    },
    "hash": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "chance": "hash"
    },
    "avatar": {
      "type": "string",
      "faker": "image.imageUrl"
    },
    "stripe_token": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "object",
      "properties": {
        "street_address": {"type": "string"},
        "city": {"type": "string"},
        "zip": {"type": "string"},
        "country": {"type": "string"}
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "minLength": 1,
      "maxLength": 255,
      "chance": { "date": [{"string": true}]}
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "minLength": 1,
      "maxLength": 255,
      "chance": { "date": [{"string": true}]}
    }
  }
}
