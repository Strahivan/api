{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["name", "owner_id"],

  "properties": {
    "name": {
      "type": "string",
      "faker": "company.name"
    },
    "description": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ],
      "faker": "company.name"
    },
    "image": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "faker": "random.word"
    },
    "owner_id": {
      "type": "integer",
      "faker": { "random.number": [{"max": 5, "min": 1}]}
    },
    "active": {
      "type": "boolean"
    },
    "created_at": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ],
      "format": "date-time",
      "chance": { "date": [{"string": true}]}
    },
    "updated_at": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ],
      "format": "date-time",
      "chance": { "date": [{"string": true}]}
    }
  }
}

