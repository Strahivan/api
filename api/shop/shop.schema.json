{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "active": {"type": "boolean"},
    "created_at": {
      "anyOf": [{"type": "string"}, {"type": "null"}],
      "chance": {"date": [{"string": true}]},
      "format": "date-time"
    },
    "description": {
      "anyOf": [{"type": "string"}, {"type": "null"}],
      "faker": "company.name"
    },
    "image": {
      "faker": "random.word",
      "maxLength": 255,
      "minLength": 1,
      "type": "string"
    },
    "name": {"faker": "company.name", "type": "string"},
    "owner_id": {
      "faker": {"random.number": [{"max": 5, "min": 1}]},
      "type": "integer"
    },
    "shop_stripe_id": {
      "chance": "hash",
      "type": "string"
    },
    "updated_at": {
      "anyOf": [{"type": "string"}, {"type": "null"}],
      "chance": {"date": [{"string": true}]},
      "format": "date-time"
    }
  },
  "required": ["name", "owner_id"],
  "type": "object"
}

