{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["name"],

  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "faker": "random.word"
    },
    "currency": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "faker": "random.word"
    },
    "lang": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "faker": "random.word"
    },
    "shortcode": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "faker": "random.word"
    },
    "tiers": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "min": { "type": "number" },
              "max": { "type": "number" },
              "rate": { "type": "number" }
            }
          }
        },
        { "type": "null" }
      ]
    },
    "ems_fee": {
      "type": "number",
      "minLength": 1,
      "maxLength": 255,
      "faker": "random.word"
    },
    "active": {
      "type": "boolean"
    }
  }
}
